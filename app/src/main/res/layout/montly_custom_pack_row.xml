<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView

        android:id="@+id/bands"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_5sdp"
        android:layout_gravity="center"
        android:elevation="@dimen/_4sdp"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardElevation="@dimen/_5sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/v_img"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/iv_chefimage"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="2dp"
                    android:src="@drawable/chef_01_image" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginRight="@dimen/_5sdp"
                    android:id="@+id/tv_productname"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="5"
                    android:text=""
                    android:textColor="@color/col_producttitle"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_add"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_12sdp"
                        android:background="@drawable/rounded_corner_btn_register"
                        android:text="Add"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <LinearLayout
                        android:background="@color/orange"
                        android:id="@+id/ll_cart_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:padding="@dimen/_8sdp"
                            android:id="@+id/iv_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/substract" />

                        <TextView
                            android:id="@+id/et_qty"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />


                        <ImageView
                            android:padding="@dimen/_8sdp"
                            android:id="@+id/iv_add"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/plus_symbol" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>





            <TextView
                android:id="@+id/tv_price_orginal"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/col_producttitle"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:id="@+id/header_ll"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:text="Product"
                        android:padding="@dimen/_5sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:text="Qty"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/header_ll"
                    android:id="@+id/rv_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>